local userBox = Instance.new("TextBox")
userBox.Name = "Username"
userBox.Size = UDim2.new(0.6, -4, 1, 0)
userBox.BackgroundColor3 = BG_SECOND
userBox.Text = ""
userBox.PlaceholderText = "Target username"
userBox.Font = Enum.Font.GothamBold
