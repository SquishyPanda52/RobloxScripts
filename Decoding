-- Pure Animate Replacement for Walk/Run (R15)
-- Directly sets Animate.walk/run AnimationIds to your clip.

local ANIMATION_ID = "rbxassetid://81698590304444"

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function apply()
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local hum = char:WaitForChild("Humanoid")
    if hum.RigType ~= Enum.HumanoidRigType.R15 then
        warn("Requires R15 rig.")
        return
    end

    -- Wait for Animate script
    local animate = char:FindFirstChild("Animate")
    if not animate then
        animate = char.ChildAdded:Wait()
        if animate.Name ~= "Animate" then
            warn("Animate script not found.")
            return
        end
    end

    -- Walk/Run animation objects
    local walk = animate:FindFirstChild("walk", true)
    local run = animate:FindFirstChild("run", true)

    if walk and walk:FindFirstChild("WalkAnim") then
        walk.WalkAnim.AnimationId = ANIMATION_ID
    end
    if run and run:FindFirstChild("RunAnim") then
        run.RunAnim.AnimationId = ANIMATION_ID
    end

    -- Force reload
    hum:ChangeState(Enum.HumanoidStateType.Physics)
    hum:ChangeState(Enum.HumanoidStateType.Running)
    print("Animate walk/run overridden to", ANIMATION_ID)
end

-- Run immediately and on respawn
apply()
LocalPlayer.CharacterAdded:Connect(function()
    task.wait(0.2)
    apply()
end)
